{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <!--Bootstrap-->
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

        <!--Latest stable release of jQuery Core Library-->
        <script src="https://code.jquery.com/jquery-1.12.2.min.js" integrity="sha256-lZFHibXzMHo3GGeehn1hudTAP3Sc0uKXBXAzHX1sjtk=" crossorigin="anonymous"></script>

        <!--Bootstrap JS-->
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js">

        </script>
        <link
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.0.1/css/all.css"
            type="text/css"
            media="screen"
        />
        <link
            rel="stylesheet"
            href="{{ asset('bundles/cas/css/persona_ajout.css') }}"
            type="text/css"
            media="screen"
        />
    {% endblock %}
{% block title %}Persona - Ajout{% endblock %}
{% block body %}

    <!--begin modal window-->
    <div class="modal fade" id="modalPhoto">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="pull-left">My Gallery Title</div>
                    <button type="button" class="close" data-dismiss="modal" title="Close"> <span class="glyphicon glyphicon-remove"></span></button>
                </div>
                <div class="modal-body">

                    <!--begin carousel-->
                    <div id="myGallery" class="carousel slide" data-interval="false">
                        <div class="carousel-inner">
                            <div class="item active"> <img src="https://placeimg.com/600/400/nature/1" alt="item0">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 0  description.</p>
                                </div>
                            </div>
                            <div class="item"> <img src="https://placeimg.com/600/400/nature/2" alt="item1">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 1 description.</p>
                                </div>
                            </div>
                            <div class="item"> <img src="https://placeimg.com/600/400/nature/3" alt="item2">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 2  description.</p>
                                </div>
                            </div>
                            <div class="item"> <img src="https://placeimg.com/600/400/nature/4" alt="item3">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 3 description.</p>
                                </div>
                            </div>
                            <div class="item"> <img src="https://placeimg.com/600/400/nature/5" alt="item4">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 4 description.</p>
                                </div>
                            </div>
                            <div class="item"> <img src="https://placeimg.com/600/400/nature/6" alt="item5">
                                <div class="carousel-caption">
                                    <h3>Heading 3</h3>
                                    <p>Slide 5 description.</p>
                                </div>
                            </div>
                            <!--end carousel-inner--></div>
                        <!--Begin Previous and Next buttons-->
                        <a class="left carousel-control" href="#myGallery" role="button" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#myGallery" role="button" data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span></a>
                        <!--end carousel--></div>

                    <!--end modal-body--></div>
                <div class="modal-footer">
                    <div class="pull-left">
                        <small>Photographs by <a href="https://placeimg.com" target="new">placeimg.com</a></small>
                    </div>
                    <button class="btn-sm close" type="button" data-dismiss="modal">Close</button>
                    <!--end modal-footer--></div>
                <!--end modal-content--></div>
            <!--end modal-dialoge--></div>
        <!--end myModal-->></div>



    {{ form_start(form) }}
    <div class='signup-container'>
        <div class='left-container'>
            <h1>
                <i class='fas fa-address-card'></i>Persona
            </h1>
            <div class='puppy'>
                <img src="{{ asset(
                    'bundles/cas/images/personas/persona.png'
                ) }}" alt="persona">
            </div>
        </div>
        <div class='right-container'>
            <header>
            <div class='set'>
                {% if form_errors(form.photoUrl) %}
                    <div class="error">{{ form_errors(form.photoUrl) }}</div>
                {% endif %}
            </div>
            <div class='set'>
                <div class='persona-label'>
                    <label for='username' class="requis">Login</label>
                    {{ form_widget(
                        form.username,
                        {'attr':{'placeholder': "login"}}
                    ) }}
                </div>
                <div class='upload-photo'>
                    <table style="width:50px">
                        <tr>
                            <td><i class='fas fa-camera-retro'></i> Choisissez une photo</td>
                        </tr>
                        <tr>
                            <td style="text-align: center">
                                <label for="cas_bundle_persona_type_photoUrl" class="label-file">
                                    <i class='fas fa-cloud-upload-alt'></i>
                                </label>
                                {{ form_widget(
                                    form.photoUrl,
                                    {'attr':{
                                        'placeholder': "photoUrl",
                                        'style': 'display: none'}}
                                ) }}
                                <label for="cas_bundle_persona_type_photo" class="label-file">
                                    <a
                                        data-toggle="modal"
                                        data-target="#modalPhoto"
                                        href="#"><i class='fas fa-images'></i>
                                    </a>
                                </label>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class='set'>
                <div class='persona-label'>
                    <label for='prenom' class="requis">Prénom</label>
                    {{ form_widget(
                        form.prenom,
                        {'attr':{'placeholder': "prenom"}}
                    ) }}
                </div>
                <div class='persona-label'>
                    <label for='nom' class="requis">Nom</label>
                    {{ form_widget(
                        form.nom,
                        {'attr':{'placeholder': "nom"}}
                    ) }}
                </div>
            </div>
                <div class='set'>
                    <div class='persona-label'>
                        <label for='age' class="requis">Age</label>
                        {{ form_widget(
                            form.age,
                            {'attr':{'placeholder': "age"}}
                        ) }}
                    </div>
                    <div class='persona-label'>
                        <label for='lieu' class="requis">Lieu</label>
                        {{ form_widget(
                            form.lieu,
                            {'attr':{'placeholder': "lieu"}}
                        ) }}
                    </div>
                </div>
                <div class='set'>
                    <div class='persona-label'>
                        <label for='metier' class="requis">Métier</label>
                        {{ form_widget(
                            form.metier,
                            {'attr':{'placeholder': "metier"}}
                        ) }}
                    </div>
                    <div class='persona-label'>
                        <label for='citation' class="requis">Citation</label>
                        {{ form_widget(
                            form.citation,
                            {'attr':{'placeholder': "citation"}}
                        ) }}
                    </div>
                </div>
                <div class='set'>
                    <div class='persona-label'>
                        <label for='histoire' class="requis">Histoire</label>
                        {{ form_widget(
                            form.histoire,
                            {'attr':{'placeholder': "histoire", "class" : "textarea"}}
                        ) }}
                    </div>
                </div>
                <br>
                <div class='set'>
                    <div class='pets-weight'>
                        <label for='pet-weight-0-25'>Aisance numérique</label>
                        <div class='radio-container'>
                            {{ form_widget(
                                form.aisanceNumerique,
                                {'attr':{'placeholder': "aisance numérique"}}
                            ) }}
                        </div>
                    </div>
                </div>
                <div class='set'>
                    <div class='pets-weight'>
                        <label for='pet-weight-0-25'>Expertise du domaine</label>
                        <div class='radio-container'>
                            {{ form_widget(
                                form.expertiseDomaine,
                                {'attr':{'placeholder': "expertise du domaine"}}
                            ) }}
                        </div>
                    </div>
                </div>
                <div class='set'>
                    <div class='pets-weight'>
                        <label for='pet-weight-0-25'>Fréquence d'usage</label>
                        <div class='radio-container'>
                            {{ form_widget(
                                form.frequenceUsage,
                                {'attr':{'placeholder': "fréquence d'usage"}}
                            ) }}
                        </div>
                    </div>
                </div>
            </header>
            <footer>
                <div class='set'>
                    <button id='back'>Back</button>
                    {{ form_widget(form.save) }}
                </div>
            </footer>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}
